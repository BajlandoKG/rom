<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- App Theme Light -->
        <item name="colorPrimary">@color/colorPrimary.Theme.Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Theme.Light</item>
        <item name="colorAccent">@color/colorAccent.Theme.Light</item>
        <item name="android:windowBackground">@color/colorBackground.Theme.Light</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor.Theme.Light</item>
        <item name="android:textColorSecondary">@color/textPrimaryColor.Theme.Light</item>

        <!-- Material Dialog Theme Light -->
        <item name="md_dark_theme">false</item>
        <item name="md_title_color">@color/colorPrimaryDark.Theme.Light</item>
        <item name="md_content_color">@color/textPrimaryColor.Theme.Light</item>
        <item name="md_background_color">@color/colorBackground.Theme.Light</item>
        <item name="md_widget_color">@color/colorAccent.Theme.Light</item>
        <item name="md_positive_color">@color/colorAccent.Theme.Light</item>
        <item name="md_neutral_color">@color/colorAccent.Theme.Light</item>
        <item name="md_negative_color">@color/colorAccent.Theme.Light</item>

        <!-- Bouncing Dialog Theme Light -->
        <item name="bd_title_color">@color/colorPrimary.Theme.Light</item>
        <item name="bd_progress_title_color">@color/colorPrimaryDark.Theme.Light</item>
        <item name="bd_content_color">@color/textPrimaryColor.Theme.Light</item>
        <item name="bd_background_color">@color/colorBackground.Theme.Light</item>
        <item name="bd_button_text_color">@color/colorPrimaryDark.Theme.Light</item>
        <item name="bd_progress_bar_color">@color/colorAccent.Theme.Light</item>
        <item name="bd_positive_color">#dadada</item>
        <item name="bd_negative_color">#dadada</item>
        <item name="bd_buttons_divider_color">#e8e8e8</item>
        <item name="bd_success_type_content_color">#A5DC86</item>
        <item name="bd_success_type_circle_color">#33A5DC86</item>
        <item name="bd_warning_type_content_color">#ffae68</item>
        <item name="bd_warning_type_circle_color">#ffae68</item>
        <item name="bd_error_type_content_color">#FF5722</item>
        <item name="bd_error_type_circle_color">#FF5722</item>

        <!-- Preference Theme Light -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>
        <item name="alertDialogTheme">@style/ListPreference.Dialog.Light</item>
        <item name="asp_preferenceIconTint">?colorAccent</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">

        <!-- App Theme Dark -->
        <item name="colorPrimary">@color/colorPrimary.Theme.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Theme.Dark</item>
        <item name="colorAccent">@color/colorAccent.Theme.Dark</item>
        <item name="android:windowBackground">@color/colorBackground.Theme.Dark</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor.Theme.Dark</item>
        <item name="android:textColorSecondary">@color/textSecondaryColor.Theme.Dark</item>

        <!-- Material Dialog Theme Dark -->
        <item name="md_dark_theme">true</item>
        <item name="md_title_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="md_content_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="md_background_color">@color/colorBackground.Theme.Dark</item>
        <item name="md_widget_color">@color/colorAccent.Theme.Dark</item>
        <item name="md_positive_color">@color/colorAccent.Theme.Dark</item>
        <item name="md_neutral_color">@color/colorAccent.Theme.Dark</item>
        <item name="md_negative_color">@color/colorAccent.Theme.Dark</item>

        <!-- Bouncing Dialog Theme Dark -->
        <item name="bd_title_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="bd_progress_title_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="bd_content_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="bd_background_color">@color/colorBackground.Theme.Dark</item>
        <item name="bd_button_text_color">@color/colorAccent.Theme.Dark</item>
        <item name="bd_progress_bar_color">@color/colorAccent.Theme.Dark</item>
        <item name="bd_positive_color">#445154</item>
        <item name="bd_negative_color">#445154</item>
        <item name="bd_buttons_divider_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="bd_success_type_content_color">#A5DC86</item>
        <item name="bd_success_type_circle_color">#33A5DC86</item>
        <item name="bd_warning_type_content_color">#ffae68</item>
        <item name="bd_warning_type_circle_color">#ffae68</item>
        <item name="bd_error_type_content_color">#FF5722</item>
        <item name="bd_error_type_circle_color">#FF5722</item>

        <!-- Preference Theme Dark -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>
        <item name="alertDialogTheme">@style/ListPreference.Dialog.Dark</item>
        <item name="asp_preferenceIconTint">?colorAccent</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="Theme.Wallpaper.NoTitleBar.Fullscreen" parent="Theme.Wallpaper.NoTitleBar.Fullscreen">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>

    </style>

    <style name="ListPreference.Dialog.Light" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent.Theme.Light</item>
        <item name="android:colorBackground">?md_background_color</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="ListPreference.Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent.Theme.Dark</item>
        <item name="android:colorBackground">?md_background_color</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="RecyclerViewStyle">

        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>

    </style>

    <style name="TextAppearance.Welcome" parent="@android:style/TextAppearance">

        <item name="android:textSize">30.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

</resources>