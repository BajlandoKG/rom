<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- App Theme Light -->
        <item name="colorPrimary">@color/colorPrimary.Theme.Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Theme.Light</item>
        <item name="colorAccent">@color/colorAccent.Theme.Light</item>
        <item name="android:windowBackground">@color/colorBackground.Theme.Light</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor.Theme.Light</item>
        <item name="android:textColorSecondary">@color/textPrimaryColor.Theme.Light</item>

        <!-- Material Dialog Theme -->
        <item name="md_dark_theme">false</item>
        <item name="md_title_color">@color/colorPrimaryDark.Theme.Light</item>
        <item name="md_content_color">@color/colorPrimaryDark.Theme.Light</item>
        <item name="md_background_color">@color/colorBackground.Theme.Light</item>
        <item name="md_widget_color">@color/colorAccent.Theme.Light</item>
        <item name="md_positive_color">@color/colorAccent.Theme.Light</item>
        <item name="md_neutral_color">@color/colorAccent.Theme.Light</item>
        <item name="md_negative_color">@color/colorAccent.Theme.Light</item>

        <!-- Preference Theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Light</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Light</item>
        <item name="asp_preferenceIconTint">@color/colorAccent.Theme.Light</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- App Theme Dark -->
        <item name="colorPrimary">@color/colorPrimary.Theme.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Theme.Dark</item>
        <item name="colorAccent">@color/colorAccent.Theme.Dark</item>
        <item name="android:windowBackground">@color/colorBackground.Theme.Dark</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor.Theme.Dark</item>
        <item name="android:textColorSecondary">@color/textSecondaryColor.Theme.Dark</item>

        <!-- Material Dialog Theme -->
        <item name="md_dark_theme">false</item>
        <item name="md_title_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="md_content_color">@color/textPrimaryColor.Theme.Dark</item>
        <item name="md_background_color">@color/colorBackground.Theme.Dark</item>
        <item name="md_widget_color">@color/colorAccent.Theme.Dark</item>
        <item name="md_positive_color">@color/colorAccent.Theme.Dark</item>
        <item name="md_neutral_color">@color/colorAccent.Theme.Dark</item>
        <item name="md_negative_color">@color/colorAccent.Theme.Dark</item>

        <!-- Preference Theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Dark</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Dark</item>
        <item name="asp_preferenceIconTint">@color/colorAccent.Theme.Dark</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="colorPrimaryDark">#00000000</item>

    </style>

    <style name="Theme.Wallpaper.NoTitleBar.Fullscreen" parent="Theme.Wallpaper.NoTitleBar.Fullscreen">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>

    </style>

    <style name="AppTheme.Dialog.Light" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">@color/colorAccent.Theme.Light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="AppTheme.Dialog.Alert.Light" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent.Theme.Light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="AppTheme.Dialog.Dark" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">@color/colorAccent.Theme.Dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="AppTheme.Dialog.Alert.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent.Theme.Dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

    </style>

    <style name="RecyclerViewStyle">

        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>

    </style>

    <style name="TextAppearance.Welcome" parent="@android:style/TextAppearance">

        <item name="android:textSize">30.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

</resources>