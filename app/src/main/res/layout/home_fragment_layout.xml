<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Welcome"
            android:text="Home Fragment"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_home_fragment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            tools:ignore="ContentDescription" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/button_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/imageView_home_fragment"
            android:layout_alignParentStart="true"
            fancy:fb_text="Button"
            fancy:fb_borderWidth="2dp"
            fancy:fb_radius="5dp" />

    </RelativeLayout>

</ScrollView>